doctype html
html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='user-scalable=no, initial-scale=1, minimum-scale=1, maximum-scale=1, width=device-width, height=device-height, target-densitydpi=device-dpi')

    title LemanMake: Mix&amp;Make

    link(href='stylesheets/generator.css', type='text/css', rel='stylesheet', media='all')

    script(src='jquery/dist/jquery.min.js', type='text/javascript')
    script(src='threejs/build/three.min.js', type='text/javascript')
    script(src='angular/angular.js', type='text/javascript')

    script(src='javascripts/database.js', type='text/javascript')
    script(src='javascripts/generator.js', type='text/javascript')
  body
    generator(ng-controller='GeneratorController')
      audio#music(src='audio/sound.wav')
      cells
        cell.cell-1(slot-driver-gl='', slot-selection='image1', texture='images/lemanmake1.png')
        cell.cell-2(slot-driver-gl='', slot-selection='image2', texture='images/lemanmake2.png')
        cell.cell-3(slot-driver-gl='', slot-selection='image3', texture='images/lemanmake3.png')
      mask
